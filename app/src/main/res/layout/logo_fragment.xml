<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".Fragments.LogoFragment">

    <ImageView
        android:id="@+id/drawerHeader_IMG_logo"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo_effect"
        android:src="@drawable/logo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/login_TXT_salonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawerHeader_IMG_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="סלון יופי זינה"
        android:textSize="14sp" />
</RelativeLayout>