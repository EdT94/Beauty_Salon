<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TextInputLayoutStyleBookAppointment"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TextInputLayoutStyleLogin"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="AutoCompleteTextViewStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/black</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:paddingStart">100dp</item>
        <item name="android:paddingEnd">100dp</item>
        <item name="colorSurface">@color/white</item>

    </style>


    <style name="DatePickerStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/myPurple</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/myPurple</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/myPurple</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/myPurple</item>    <!--days of the week-->
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/myPurple</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="backgroundColorAutoCompleteTextInput"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorSurface">@color/white</item>
    </style>



    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>








</resources>